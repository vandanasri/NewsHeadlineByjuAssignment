<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ImageView
    android:id="@+id/ivBack"
    style="@style/back_button_style"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_layer"
        android:padding="@dimen/detail_padding_24">

        <TextView
            android:id="@+id/tvDetailTitleName"
            style="@style/detail_title_text_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Billions of Dollars May Be Waiting to Enter Bitcoin, Stunning USDT Data Shows"
            />

        <TextView
            android:id="@+id/tvDetailSourceName"
            style="@style/detail_source_text_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDetailTitleName"
            android:text="CNN"
            />

        <TextView
            android:id="@+id/tvDate"
            style="@style/detail_source_text_style"
            app:layout_constraintTop_toBottomOf="@+id/tvDetailTitleName"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="2020-07-01"
            />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/detail_description_text_style"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            android:text="The coronavirus has been one of the most damning events to happen to the United States stock market in"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>